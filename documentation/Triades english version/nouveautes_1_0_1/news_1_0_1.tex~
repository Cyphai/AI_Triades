\centering
\begin{subfigure}{0.4\textwidth}

\centering
\includegraphics[width=0.4\textwidth]{../images/note_fermee.png}
\caption{A note in hidden mode}
\end{subfigure}

\begin{subfigure}{0.4\textwidth}

\centering
\includegraphics[width=0.8\textwidth]{../images/note_ouverte_pas_edition.png}
